<section id="login" class="panel panel-primary form-login-size">
    	    <div class="panel-body">
        	    <div class="form-wrap ">
                <h1 align="center">Sign In</h1>
<%= form_tag sessions_path do %>
                        <div class="form-group">
<%= label_tag :username %>

<%= text_field_tag :username, (params[:username] unless params[:username].blank?), :class => "form-control", :required => true %>
                        </div>
                        <div class="form-group">
<%= label_tag :password %>

<%= password_field_tag :password ,nil,:class => "form-control", :required => true%>
                        </div>
                        <div class="checkbox">
                            <span class="character-checkbox" onclick="showPassword()"></span>
                            <span class="label btn-primary" style="background: white">Show password</span>
                        </div>
                       
<%= submit_tag :submit, :class => "btn btn-inverse btn-raised btn-lg btn-block" %>

<% end %>  
    <% flash.each do |name, msg| %>
      <%= content_tag :div, class: "alert alert-#{ name == :error ? "danger" : "success" } alert-dismissable", role: "alert" do %>
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <%= msg %>
      <% end %>
    <% end %>
    <%= link_to "Sign up", sign_up_url,:class => "btn btn-primary btn-raised btn-block" %>
        	  
    	</div> <!-- /.row -->
    </div> <!-- /.container -->
</section>

