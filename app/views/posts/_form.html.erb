<%= form_for @comment, remote: true do |f| %>

        <%= f.hidden_field :article_id, value: @article.id %>

        <% if current_user %>

            <%= f.hidden_field :user_id, value: current_user.id %>

        <% end %>

        <br/>

        <%= f.label :content %>

        <%= f.text_area :content, cols: 20, rows: 10 %>

        <br/>

        <%= f.submit :submit %>

    <% end %>
